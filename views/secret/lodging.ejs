<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <%- include("../common/header")%>
</head>

<body>
    <%- include("../common/navbar-custom") %>

    <div class="event-container">
        <h3 class="year">Lodging Reservation</h3>
        <!--Have to work solution for years-->
        <% details.forEach(function(item){ %>
            <% if(item.startDay > new Date()) {%>
        <div class="event">
            <div class="event-left">
                <div class="event-date">
                    <div>Check In Date</div>
                    <div class="month"><%= item.startDay.toLocaleString('default', { month: 'long' })%></div>
                    <div class="date"><%= item.startDay.getDate()%></div>
                </div>
            </div>

            <div class="event-right">
                <h3 class="event-title">Horse Lodging Reservation</h3>

                <div class="event-timing">
                    <i class="far fa-clock fa-2x"></i>
                    <p style="font-weight: bold;">
                        CheckIn: <%= item.startDay.toLocaleString('default', { month: 'long' })%>
                        <%= item.startDay.getDate()%>
                    </p>
                    <p style="font-weight: bold;">
                        CheckOut: <%= item.endDay.toLocaleString('default', { month: 'long' })%>
                        <%= item.endDay.getDate()%></p>
                </div>

                <div class="event-description">

                    <p>Lesson For: <%= item.firstname%> <%= item.lastname %></p>
                    <p>Contact: <%= item.phone%></p>
                    <p>Horse Name: <%= item.horseName %></p>
                    <p>Horse Type: <%= item.horseType %></p>
                    <p>Duration: <%= item.duration%> Months</p>
                    <p>Payment Amount: $<%= item.paymentAmount %></p>
                    <p>Payment Recived: <%= item.paymentStatus %></p>
                    <p>Payment Id: <%= item.paymentId %></p>
                    <% if(item.startDay > new Date()) {%>
                    <button id=<%= item._id %> class="w3-button w3-blue"
                        onclick="cancelRes(this.id, 'admin', 'Lodging', '<%= item.paymentAmount %>', '<%= item.paymentId %>','<%= item.userId %>')">Cancel
                    </button>
                    <% } %>
                </div>
            </div>
        </div>
        <%}%>
        <% }) %>
        <h3 class="year">Past Lodging Reservation</h3>
         <% details.forEach(function(item){ %>
         <% if(item.startDay < new Date()) {%>
         <div class="event">
             <div class="event-left">
                 <div class="event-date">
                     <div>Check In Date</div>
                     <div class="month"><%= item.startDay.toLocaleString('default', { month: 'long' })%></div>
                     <div class="date"><%= item.startDay.getDate()%></div>
                 </div>
             </div>

             <div class="event-right">
                 <h3 class="event-title">Horse Lodging Reservation</h3>

                 <div class="event-timing">
                     <i class="far fa-clock fa-2x"></i>
                     <p style="font-weight: bold;">
                         CheckIn: <%= item.startDay.toLocaleString('default', { month: 'long' })%>
                         <%= item.startDay.getDate()%>
                     </p>
                     <p style="font-weight: bold;">
                         CheckOut: <%= item.endDay.toLocaleString('default', { month: 'long' })%>
                         <%= item.endDay.getDate()%></p>
                 </div>

                 <div class="event-description">

                     <p>Lesson For: <%= item.firstname%> <%= item.lastname %></p>
                     <p>Contact: <%= item.phone%></p>
                     <p>Horse Name: <%= item.horseName %></p>
                     <p>Horse Type: <%= item.horseType %></p>
                     <p>Duration: <%= item.duration%> Months</p>
                     <p>Payment Amount: $<%= item.paymentAmount %></p>
                     <p>Payment Recived: <%= item.paymentStatus %></p>
                     <p>Payment Id: <%= item.paymentId %></p>
                     <% if(item.startDay > new Date()) {%>
                     <button id=<%= item._id %> class="w3-button w3-blue"
                         onclick="cancelRes(this.id, 'admin', 'Lodging', '<%= item.paymentAmount %>', '<%= item.paymentId %>','<%= item.userId %>')">Cancel
                     </button>
                     <% } %>
                 </div>
             </div>
         </div>
         <%}%>
        <% }) %>

    </div>

</body>

</html>